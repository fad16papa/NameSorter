@model NameSorter.ViewModel.SortViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="m-3">
        <a asp-controller="TextFile" asp-action="DownloadCacheSortedList">Download File</a>
    </div>

    <div class="m-1">
        <table class="table table-responsive table-hover align-content-center">
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Given Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var counterUser = 1;
                }

                @foreach (var item in Model.NamesModels)
                {
                    <tr>
                        <td>@counterUser</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                    </tr>

                    counterUser++;
                }
            </tbody>
        </table>
    </div>
</div>