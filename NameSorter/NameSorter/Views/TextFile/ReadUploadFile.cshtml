@model NameSorter.ViewModel.SortViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-responsive table-hover align-content-center">
    <thead>
        <tr>
            <th>S/N</th>
            <th>Given Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            var counterUser = 1;
        }

        @foreach (var item in Model.NamesModels)
        {
            <tr>
                <td>@counterUser</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
            </tr>

            counterUser++;
        }
    </tbody>
</table>

